<h2>Rock Paper Scissors</h2>

<h3>You picked <%= @select %></h3>

<h3>Server picked <%= @result %></h3>

<% if @select == "rock" && @result == "paper" %>
 <p>You lost</p>
 <% elsif @select == "rock" && @result == "scissors" %>
 <p>You Won</p>

 <% elsif @select == "paper" && @result == "rock" %>
 <p>You Won</p>
 <% elsif @select == "paper" && @result == "scissors" %>
 <p>You lost</p>
 <% elsif @select == "scissors" && @result == "paper" %>
 <p>You won</p>
 <% elsif @select == "scissors" && @result == "rock" %>
 <p>You lost</p>
 <% elsif @select == @result %>
 <p>Its a draw</p>

<% end %>
